@inherits LayoutComponentBase
@using ProjetV3R_Employe.Data.Models;


<PageTitle>Projet V3R Employés</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <header class="top-row d-flex justify-content-between align-items-center">
            <div>
                <p>Logo V3r</p>
            </div>

            <div class="user-status d-flex align-items-center">
                @if (currentUser is not null)
                {
                    <p class="mb-0">
                        Connecté : @currentUser.Email (@currentUser.RoleNavigation.NomRole)
                    </p>
                    <button class="btn btn-link text-danger ms-2" @onclick="Logout">Déconnexion</button>
                }
                else
                {
                    <p class="mb-0">Non connecté</p>
                }
            </div>
        </header>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private User? currentUser;

    [Inject]
    private AuthService AuthService { get; set; } = null!;

    [Inject]
    private NavigationManager Navigation { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        currentUser = await AuthService.GetCurrentUserAsync();
    }

    private async Task Logout()
    {
        await AuthService.SignOutAsync();
        Navigation.NavigateTo("/");
    }
}
