@page "/"
@using ProjetV3R_Employe.Data.Models;
@inject AuthService AuthService
@inject NavigationManager Navigation

<h3>Connexion</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <p style="color: red;">@errorMessage</p>
}

<EditForm Model="user" OnValidSubmit="Login">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Email :</label>
        <InputText class="form-control" @bind-Value="user.Email" />
    </div>

    <button class="btn btn-primary" type="submit">Connexion</button>
</EditForm>

@code {
    private User user = new User();
    private string errorMessage = string.Empty;

    private async Task Login()
    {
        var (success, role, error) = await AuthService.LoginUserAsync(user.Email);

        if (success)
        {
            Console.WriteLine($"[Login] Connexion réussie pour le rôle : {role}");

            // Redirection selon le rôle
            if (role == "Administrateur" || role == "Tenant-Admin")
            {
                Navigation.NavigateTo("/gestion-employes", forceLoad: true); // Forcer le rechargement
            }
            else if (role == "Employé")
            {
                Navigation.NavigateTo("/gestion-fournisseurs", forceLoad: true); // Forcer le rechargement
            }
        }
        else
        {
            Console.WriteLine($"[Login] Échec de la connexion : {error}");
            errorMessage = $"Échec de la connexion : {error}";
        }
    }


}
